pipeline {
    agent any

    stages {
        stage('Restore') {
            steps {
                sh 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                sh 'dotnet build --configuration Release'
            }
        }

        stage('Test') {
            steps {
                sh 'dotnet test'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t minha-api:latest .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f minha-api || true'
                sh 'docker run -d --name minha-api -p 8081:80 minha-api:latest'
            }
        }
    }
}